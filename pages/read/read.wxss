cover-view {
    position: fixed;
    top: 500rpx;
    right: 0;
}

cover-image {
    width: 85rpx;
    height: 85rpx;
    margin-bottom: 29rpx;
}

.title-image {
    width: 50rpx;
    height: 50rpx;
    display: inline-block;
}