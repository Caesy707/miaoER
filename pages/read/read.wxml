  <view class="mask" wx:if="{{isMask}}">
    <view class="popup">
      <view>
        <navigator
          class="next"
          hover-class="next1"
          bindtap="changeNext"
        >
        </navigator>
      </view>
      <view>
        <navigator
          class="searchAns"
          hover-class="searchAns1"
          bindtap="searchAns"
        >
        </navigator>
      </view>
    </view>

