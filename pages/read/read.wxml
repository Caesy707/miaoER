    <view class="answer_box">
      <!-- <view wx:for="{{episode.questions}}" wx:for-index="que"> -->
      <view wx:for="{{episode.questions}}">

        <view class="answer_title">
          {{index+1}}、 {{item.content}}
        </view>
        <view class="choice">
          <view class="A">
            <image
              src="{{AnsSeleted[index][0]?'https://z3.ax1x.com/2021/05/18/ghfZ40.png':'https://z3.ax1x.com/2021/05/18/ghfmCV.png'}}"
              mode="widthFix"
              bindtap="changeColor"
              data-ans="0"
              data-index="{{index}}"
            />
          </view>
          <view class="answer_A">
            {{item.option_a}}
          </view>
        </view>
        <view class="choice">
          <view class="A">
            <image
              src="{{AnsSeleted[index][1]?'https://z3.ax1x.com/2021/05/18/ghfVNq.png':'https://z3.ax1x.com/2021/05/18/ghfEEn.png'}}"
              mode="widthFix"
              bindtap="changeColor"
              data-ans="1"
              data-index="{{index}}"
            />
          </view>
          <view class="answer_A">
            {{item.option_b}}
          </view>
        </view>
        <view class="choice">
          <view class="A">
            <image
              src="{{AnsSeleted[index][2]?'https://z3.ax1x.com/2021/05/18/ghfkHs.png':'https://z3.ax1x.com/2021/05/18/ghfn3T.png'}}"
              mode="widthFix"
              bindtap="changeColor"
              data-ans="2"
              data-index="{{index}}"
            />
          </view>
          <view class="answer_A">
            {{item.option_c}}
          </view>
        </view>

        <view class="choice">
