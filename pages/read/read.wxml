              src="{{AnsSeleted[index][3]?'https://z3.ax1x.com/2021/05/18/ghfugU.png':'https://z3.ax1x.com/2021/05/18/ghfKvF.png'}}"
              mode="widthFix"
              bindtap="changeColor"
              data-ans="3"
              data-index="{{index}}"
            />
          </view>
          <view class="answer_A">
            {{item.option_a}}
          </view>
        </view>
      </view>

